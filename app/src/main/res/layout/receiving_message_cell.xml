<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date_seperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="08/09/2018"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/in_coming_speech"
            android:layout_gravity="start"
            android:paddingEnd="6dp"
            android:paddingRight="6dp"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            >

            <TextView
                android:id="@+id/sender_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobby"
                android:textColor="@color/messageTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:id="@+id/wishMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAC Address - The physical address of the WAN port, as seen from the Internet. IP Address - The current WAN (Internet) IP Address. This field will be blank or 0.0.0.0 if the IP Address is assigned dynamically and there is no connection to Internet."
                android:textColor="@color/messageTextColor"
                android:textSize="18sp"
                android:typeface="sans"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/sender_id"
                />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 May 2017, 1:19 AM"
                android:textColor="@color/timeTextColor"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/wishMessage"/>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>