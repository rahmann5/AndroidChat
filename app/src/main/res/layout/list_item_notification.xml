<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shadow"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/notification_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="A very long invite message to a friend that goes."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="08/09/2018"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="0.2"
       android:orientation="vertical"
       android:padding="2dp"
        android:gravity="right">

       <ImageButton
           android:id="@+id/notification_accept"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="1dp"
           android:src="@drawable/ic_action_accept"
           android:background="@color/main_theme_1"
           android:padding="10dp"
           />

       <ImageButton
           android:id="@+id/notification_reject"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="2dp"
           android:src="@drawable/ic_action_reject"
           android:background="@color/main_theme_1"
           android:padding="10dp"
           />

   </LinearLayout>

</LinearLayout>