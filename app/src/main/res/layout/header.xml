<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/unknown" />

    <ImageButton
        android:id="@+id/update_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_alignRight="@+id/image_header"
        android:layout_alignEnd="@+id/image_header"
        android:layout_alignBottom="@+id/image_header"
        android:background="@drawable/header_icon_round"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:clickable="true"
        />

    <ImageButton
        android:id="@+id/undo_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert"
        android:background="@drawable/header_icon_round"
        android:padding="8dp"
        android:clickable="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/update_profile_pic"
        android:layout_toLeftOf="@+id/update_profile_pic"
        android:layout_toStartOf="@+id/update_profile_pic"/>

    <ImageButton
        android:id="@+id/reset_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_popup_sync"
        android:background="@drawable/header_icon_round"
        android:padding="8dp"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/undo_profile_pic"
        android:layout_toLeftOf="@+id/undo_profile_pic"
        android:layout_toStartOf="@+id/undo_profile_pic"/>


</RelativeLayout>