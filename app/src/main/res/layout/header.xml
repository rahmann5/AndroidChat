<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/image_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_bck"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_header"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/update_profile_pic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/unknown"
            />


        <TextView
            android:id="@+id/prof_info_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/undo_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/undo_profile"
                android:background="@drawable/button_shape"
                android:padding="8dp"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:layout_margin="2dp"
                />

            <TextView
                android:id="@+id/reset_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_profile"
                android:background="@drawable/button_shape"
                android:padding="8dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.6"
                android:clickable="true"
                android:focusable="true"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>